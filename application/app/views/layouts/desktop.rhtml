<html>

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>
      Escritorio <%= Setting.platform_name %>
    </title>

    <%= render(:partial => "shared/stylesheets_desktop") %>
    <%= render(:partial => "shared/javascripts_desktop") %>
    <%= render(:partial => "shared/layers") %>
    <link rel="shortcut icon" href="/favicon.ico" />

  </head>

  <body onLoad="loadUrls();" onUnload="storeUrls();" onResize="resizeButtons();" onclick="hideMenus();" style="overflow: hidden; margin: 0;">

    <%= render(:partial => "shared/menubar") %>

    <div id='layers'>

      <div class="whitescreen" width="100%" height="100%">
        <%= image_tag "Throbber.gif" %>
      </div>

      <div id="desktop" class="foreground">
        <%= @content_for_layout %>
      </div>

    </div>

  </body>

</html>
