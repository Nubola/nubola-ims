<h3>Reportes disponibles</h3>


<form name="usage_reports" method="post" action="usage_per_day">
  <table>
    <tr>
      <td width="500px">
        Número de usuarios que se conectaron
      </td>
      <td>
        <input type="hidden" name="id" value="-1" />
        <select name="day" onchange="javascript: if (document.usage_reports.day.value != '') { document.usage_reports.submit(); }">
          <option value="" selected="selected"></option>
          <% @dates.each do |date| -%>
            <option value="<%= date.to_i %>"><%= mes_i_any(date) %></option>
          <% end -%>
        </select>
      </td>
    </tr>
  </table>
</form>

