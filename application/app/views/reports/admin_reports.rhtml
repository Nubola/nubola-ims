<form name="installed_apps_reports" method="post" action="installed_apps">
  <table>
    <tr>
      <td width="500px">
        Aplicaciones instaladas
      </td>
      <td>
        <select name="host" onchange="javascript: if (document.installed_apps_reports.host.value != '') { document.installed_apps_reports.submit(); }">
          <option value="" selected="selected"></option>
          <option value="shared">En el host compartido</option>
          <option value="virtual">En máquinas virtuales</option>
          <option value="all">En qualquier máquina</option>
        </select>
      </td>
    </tr>
  </table>
</form>

