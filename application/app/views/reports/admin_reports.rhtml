<table>
  <tr>
    <td width="500px">
      Reportes del grupo
    </td>
    <td>
      <select name="id" onchange="<%=remote_function(:update => "group_form", :with => "'group='+value", :url => { :action => :group_reports })%>">
        <option value="" <%= 'selected="selected"' unless @group %>></option>
        <%= options_for_select(@groups.collect {|g| [ g.name, g.id ] }) %>
      </select>
    </td>
  </tr>
</table>

<div id="group_form">
</div>

