<div style="margin-left: auto; margin-right: auto; width: 50%;">

<h3><%= t("reports_for_group")  + " " + @group.name %></h3>

<form name="usage_reports_g" method="post" action="usage_per_day">
  <table>
    <tr>
      <td width="500px">
        <%= t("number_of_connected_users") %>
      </td>
      <td>
        <input type="hidden" name="id" value="<%= @group.id %>" />
        <input type="hidden" name="locale" value="<%= I18n.locale %>" />
        <select name="day" onchange="javascript: if (document.usage_reports_g.day.value != '') { document.usage_reports_g.submit(); }">
          <option value="" selected="selected"></option>
          <% @dates.each do |date| -%>
            <option value="<%= date.to_i %>"><%= mes_i_any(date) %></option>
          <% end -%>
        </select>
      </td>
    </tr>
  </table>
</form>

