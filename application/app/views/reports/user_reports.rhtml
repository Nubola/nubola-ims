<% unless @group.vhost.nil? -%>
<div style="border: 1px solid; width: 500; margin:20">
<h3><%= t("particular_server") %></h3>
<table width="100%">
  <th><%= t("vhost_type")  %></th>
  <th><%= t("vhost_cpu")   %></th>
  <th><%= t("vhost_ram")   %></th>
  <th><%= t("vhost_disk")  %></th>
  <th><%= t("vhost_state") %></th>
  <tr align="center">
    <td><%= @group.vhost.host_type.name %></td>
    <td><%= @group.vhost.host_type.cpu %> MHz</td>
    <td><%= @group.vhost.host_type.ram %> MB</td>
    <td><%= @group.vhost.host_type.disk %> GB</td>
    <td><%= t(@group.vhost.status) %></td>
  </tr>
</table>
<br />
</div>
<% end -%>

</div>
